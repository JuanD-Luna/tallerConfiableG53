@model mecanicoModelo
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Guardar</h1>

<div class="card">
    <div class="card-header">
        Crear Mecanico
    </div>
    <div class="card-body">

        <form asp-action="Guardar" asp-controller="Mecanico" method="post">
            <div class="mb-3">
                <label class="form-label">Identificacion</label>
                <input asp-for="identificacion" type="text" class="form-control" />
                <span asp-validation-for="identificacion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombres</label>
                <input asp-for="nombre" type="text" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Apellidos</label>
                <input asp-for="apellido" type="text" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Año de nacimiento</label>
                <input asp-for="anoNacimiento" type="text" class="form-control" />
                <span asp-validation-for="anoNacimiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Telfono</label>
                <input asp-for="telefono" type="text" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Direccion</label>
                <input asp-for="direccion" type="text" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nivel de Educacion</label>
                <input asp-for="nivelEducativo" type="text" class="form-control" />
                <span asp-validation-for="nivelEducativo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mecanico" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>